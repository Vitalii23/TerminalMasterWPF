<Window x:Class="TerminalMasterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TerminalMasterWPF"
        xmlns:vm="clr-namespace:TerminalMasterWPF.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="auto">

    <Window.DataContext>
        <vm:DataGets/>
    </Window.DataContext>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="1035"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel x:Name="MainStackPanel" Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="10,10,0,10"/>
                    <Setter Property="Padding" Value="0,0,0,0"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="BorderThickness" Value="2,2,2,2"/>
                </Style>
                <Style TargetType="ComboBox">
                    <Setter Property="Margin" Value="1100,5,0,0"/>
                    <Setter Property="Padding" Value="5,0,0,0"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Height" Value="auto"/>
                    <Setter Property="Width" Value="200"/>
                    <Setter Property="MaxDropDownHeight" Value="200"/>
                    <Setter Property="BorderThickness" Value="2,2,2,2"/>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="AddButton" Click="AddButton_Click">Добавить</Button>
            <Button x:Name="EditButton" Click="EditButton_Click">Изменить</Button>
            <Button x:Name="DeleteButton" Click="DeleteButton_Click">Удалить</Button>
            <Button x:Name="UpdateButton" Click="UpdateButton_Click">Обновить</Button>
            <Button x:Name="DowloandButton" Click="DowloandButton_Click">Скачать</Button>
        </StackPanel>
        <TabControl x:Name="MainTabControl" Grid.Row="2" SelectionChanged="MainTabControl_SelectionChanged">
            <TabItem x:Name="PrinterTabItem" Header="Принтеры" Background="#FFE5E5E5">
                <DataGrid x:Name="PrinterDataGrid" 
                                  AutoGeneratingColumn="PrinterDataGrid_AutoGeneratingColumn"
                                  CanUserSortColumns="True"
                                  BeginningEdit="PrinterDataGrid_BeginningEdit"
                                  CellEditEnding="PrinterDataGrid_CellEditEnding"
                                  RowEditEnding="PrinterDataGrid_RowEditEnding"
                                  ColumnWidth="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                                  ScrollViewer.CanContentScroll="True"
                                  CanUserReorderColumns="True" 
                                  CanUserResizeColumns="True"
                                  Margin="0,0,0,0"
                                  IsReadOnly="True" 
                                  Sorting="PrinterDataGrid_Sorting"
                                  ItemsSource="{Binding PrinterList, UpdateSourceTrigger=PropertyChanged}">
                </DataGrid>
            </TabItem>
            <TabItem x:Name="CartridgeTabItem" Header="Картриджи" Background="#FFE5E5E5">
                <DataGrid x:Name="CartridgeDataGrid" 
                                  AutoGeneratingColumn="CartridgeDataGrid_AutoGeneratingColumn"
                                  CanUserSortColumns="True"
                                  BeginningEdit="CartridgeDataGrid_BeginningEdit"
                                  CellEditEnding="CartridgeDataGrid_CellEditEnding"
                                  RowEditEnding="CartridgeDataGrid_RowEditEnding"
                                  ColumnWidth="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.CanContentScroll="True"
                                  CanUserReorderColumns="True" 
                                  CanUserResizeColumns="True"
                                  Margin="0,0,0,0"
                                  IsReadOnly="True" 
                                  Sorting="CartridgeDataGrid_Sorting"
                                  ItemsSource="{Binding CartridgesList, UpdateSourceTrigger=PropertyChanged}">
                </DataGrid>
            </TabItem>
            <TabItem x:Name="CashRegisterTabItem" Header="Контрольная-кассовая машина (ККМ)" Background="#FFE5E5E5">
                <DataGrid x:Name="CashRegisterDataGrid" 
                                  AutoGeneratingColumn="CashRegisterDataGrid_AutoGeneratingColumn"
                                  CanUserSortColumns="True"
                                  BeginningEdit="CashRegisterDataGrid_BeginningEdit"
                                  CellEditEnding="CashRegisterDataGrid_CellEditEnding"
                                  RowEditEnding="CashRegisterDataGrid_RowEditEnding"
                                  ColumnWidth="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.CanContentScroll="True"
                                  CanUserReorderColumns="True" 
                                  CanUserResizeColumns="True"
                                  Margin="0,0,0,0"
                                  IsReadOnly="True" 
                                  Sorting="CashRegisterDataGrid_Sorting"
                                  ItemsSource="{Binding CartridgesList, UpdateSourceTrigger=PropertyChanged}">
                </DataGrid>
            </TabItem>
            <TabItem x:Name="SimCardTabItem" Header="Sim-карты" Background="#FFE5E5E5">
                <DataGrid x:Name="SimCardDataGrid" 
                                  AutoGeneratingColumn="SimCardDataGrid_AutoGeneratingColumn"
                                  CanUserSortColumns="True"
                                  BeginningEdit="SimCardDataGrid_BeginningEdit"
                                  CellEditEnding="SimCardDataGrid_CellEditEnding"
                                  RowEditEnding="SimCardDataGrid_RowEditEnding"
                                  ColumnWidth="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.CanContentScroll="True"
                                  CanUserReorderColumns="True" 
                                  CanUserResizeColumns="True"
                                  Margin="0,0,0,0"
                                  IsReadOnly="True" 
                                  Sorting="SimCardDataGrid_Sorting"
                                  ItemsSource="{Binding SimCardList, UpdateSourceTrigger=PropertyChanged}">
                </DataGrid>
            </TabItem>
            <TabItem x:Name="PhoneBookTabItem" Header="Телефоны сотрудников" Background="#FFE5E5E5">
                <DataGrid x:Name="PhoneBookDataGrid" 
                                  AutoGeneratingColumn="PhoneBookDataGrid_AutoGeneratingColumn"
                                  CanUserSortColumns="True"
                                  BeginningEdit="PhoneBookDataGrid_BeginningEdit"
                                  CellEditEnding="PhoneBookDataGrid_CellEditEnding"
                                  RowEditEnding="PhoneBookDataGrid_RowEditEnding"
                                  ColumnWidth="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.CanContentScroll="True"
                                  CanUserReorderColumns="True" 
                                  CanUserResizeColumns="True"
                                  Margin="0,0,0,0"
                                  IsReadOnly="True" 
                                  Sorting="PhoneBookDataGrid_Sorting"
                                  ItemsSource="{Binding PhoneBookList, UpdateSourceTrigger=PropertyChanged}">
                </DataGrid>
            </TabItem>
            <TabItem x:Name="HolderTabItem" Header="Владельцы" Background="#FFE5E5E5">
                <DataGrid x:Name="HolderDataGrid" 
                                  AutoGeneratingColumn="HolderDataGrid_AutoGeneratingColumn"
                                  CanUserSortColumns="True"
                                  BeginningEdit="HolderDataGrid_BeginningEdit"
                                  CellEditEnding="HolderDataGrid_CellEditEnding"
                                  RowEditEnding="HolderDataGrid_RowEditEnding"
                                  ColumnWidth="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                                  ScrollViewer.CanContentScroll="True"
                                  CanUserReorderColumns="True" 
                                  CanUserResizeColumns="True"
                                  Margin="0,0,0,0"
                                  IsReadOnly="True" 
                                  Sorting="HolderDataGrid_Sorting"
                                  ItemsSource="{Binding HolderList, UpdateSourceTrigger=PropertyChanged}">
                </DataGrid>
            </TabItem>
            <TabItem x:Name="UserTabItem" Header="Пользователи" Background="#FFE5E5E5">
                <DataGrid x:Name="UserDataGrid" 
                                  AutoGeneratingColumn="UserDataGrid_AutoGeneratingColumn"
                                  CanUserSortColumns="True"
                                  BeginningEdit="UserDataGrid_BeginningEdit"
                                  CellEditEnding="UserDataGrid_CellEditEnding"
                                  RowEditEnding="UserDataGrid_RowEditEnding"
                                  ColumnWidth="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                                  ScrollViewer.CanContentScroll="True"
                                  CanUserReorderColumns="True" 
                                  CanUserResizeColumns="True"
                                  Margin="0,0,0,0"
                                  IsReadOnly="True" 
                                  Sorting="UserDataGrid_Sorting"
                                  ItemsSource="{Binding UserList, UpdateSourceTrigger=PropertyChanged}">
                </DataGrid>
            </TabItem>
            <TabItem x:Name="IndividualEntrepreneurTabItem" Header="Индивидуальные предприниматели" Background="#FFE5E5E5">
                <DataGrid x:Name="IndividualEntrepreneurDataGrid" 
                                  AutoGeneratingColumn="IndividualEntrepreneurDataGrid_AutoGeneratingColumn"
                                  CanUserSortColumns="True"
                                  BeginningEdit="IndividualEntrepreneurDataGrid_BeginningEdit"
                                  CellEditEnding="IndividualEntrepreneurDataGrid_CellEditEnding"
                                  RowEditEnding="IndividualEntrepreneurDataGrid_RowEditEnding"
                                  ColumnWidth="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                                  ScrollViewer.CanContentScroll="True"
                                  CanUserReorderColumns="True" 
                                  CanUserResizeColumns="True"
                                  Margin="0,0,0,0"
                                  IsReadOnly="True" 
                                  Sorting="IndividualEntrepreneurDataGrid_Sorting"
                                  ItemsSource="{Binding IndividualEntrepreneurList, UpdateSourceTrigger=PropertyChanged}">
                </DataGrid>
            </TabItem>
            <TabItem x:Name="WaybillTabItem" Header="Накладные" Background="#FFE5E5E5">
                <DataGrid x:Name="WaybillDataGrid" 
                                  AutoGeneratingColumn="WaybillDataGrid_AutoGeneratingColumn"
                                  CanUserSortColumns="True"
                                  BeginningEdit="WaybillDataGrid_BeginningEdit"
                                  CellEditEnding="WaybillDataGrid_CellEditEnding"
                                  RowEditEnding="WaybillDataGrid_RowEditEnding"
                                  ColumnWidth="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.CanContentScroll="True"
                                  CanUserReorderColumns="True" 
                                  CanUserResizeColumns="True"
                                  Margin="0,0,0,0"
                                  IsReadOnly="True" 
                                  Sorting="WaybillDataGrid_Sorting"
                                  ItemsSource="{Binding WaybillList, UpdateSourceTrigger=PropertyChanged}">
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
